@import 'static/style/weui.wxss';
@import 'static/iconfont/iconfont.wxss';

/* public css */
.cl {
    clear: both;
    overflow: hidden;
}

.z {
    float: left;
}

.y {
    float: right;
}

.em,i,cite {
    font-style: normal;
}

.wrap {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.wrap2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.bj-white {
    background: #fff;
}

.weui-tabbar__item.weui-bar__item--on .weui-tabbar__label {
    color: #0096ff;
}

.weui-bar__item--on i {
    color: #0096ff;
}
.link-show-jump{
    position: relative;
    padding-right: 15px;
}
.link-show-jump::before{
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    right: 2px;
    margin-top: -4px;
}

.no-data {
    text-align: center;
    padding: 40px 0 15px;
}

.no-data view {
    font-size: 180rpx;
    color: #aaa;
    line-height: 1;
    display: block;
}

.no-data text {
    display: inline-block;
    margin-top: 20px;
    font-size: 28rpx;
    color: #aaa;
}

.no-data text navigator{
    color: #F0AD4E;
    padding-left: 2px;
}
/* footer */
.footer-box {
    width: 100%;
    height: 52px;
    content: "";
    overflow: hidden;
}

.footer {
    width: 100%;
    display: flex;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 9;
}

.footer .li {
    flex: 1;
    text-align: center;
}

.footer .li .navigator {
    display: block;
    color: #c6c8cd;
    font-size: 12px;
    line-height: 20px;
    padding: 7px 0 4px;
}

.footer .li .navigator view{
    font-size: 24px;
}

.footer .li.on .navigator {
    color: #584f60;
}

.public-nav {
    display: block;
    width: 100%;
    height: 46px;
    position: fixed;
    color: #000;
    overflow: hidden;
    top: 0px;
    background-color: #fff;
    z-index: 999;
}
.public-nav .nav-left {
    font-size: 48rpx;
    position: absolute;
    left: 10px;
    top: 0;
    color: #333;
    font-weight: 700;
}
.public-nav .nav-left .iconfont{
    font-size: 36rpx;
    font-weight: 700;
}
.public-nav .title {
    text-align: center;
    width: 100%;
    line-height: 46px;
    font-size: 32rpx;
    color: #333;
    font-weight: 700;
}
.weui-footer{
    padding: 20px;
    margin: 0px;
}
