page{
    -webkit-user-select: none;
    user-select: none;
    width: 100%;
    height: 70%;
    overflow-y: hidden;
}

.flex{
    display: flex;
    justify-content: center;
    align-items: center;
}
.container{
    width: 100%;
    height: 100%;
}

.avatar-container{
    position: relative;
    text-align: center;
    padding-top: 50%;
}


.avatar{
    width: 10rem;
    height: 10rem;
    background-color: #e5e5e5;
    border-radius: 50%;
}

.item{
    width: 10rem;
    line-height: 3rem;
}
.item-no{
    line-height: 3rem;
    font-size: 24rpx;
    color: #999;
    text-align: center;
    width: 10rem;
}