}

.tab-background {
    height: 100%;
    width: 100%;
    position: fixed;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 2;
    top: 0;
    left: 0;
}
.tab-content {
    width: 90%;
    position: fixed;
    background-color: #fff;
    z-index: 3;
    top: 50%;
    left: 5%;
    border-radius: 10px;
    box-shadow: 0 0 3px 3px rgba(0,0,0,0.05);
    margin-top: -150px;
    overflow: hidden;
}
