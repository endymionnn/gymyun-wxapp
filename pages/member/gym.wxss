.gym-list {
    margin: 0 15px;
}

.gym-list .li {
    background: #799bda;
    margin-bottom: 15px;
    padding: 10px 15px;
    border-radius: 5px;
    overflow: hidden;
}

.gym-list .li:nth-child(1n) {
    background: #799bda;
}

.gym-list .li:nth-child(2n) {
    background: #69b29b;
}

.gym-list .li:nth-child(3n) {
    background: #807dd0;
}

.gym-list .li .minute {
    font-size: 36rpx;
    color: #fff;
    line-height: 52rpx;
    padding-bottom: 5px;
}

.gym-list .li .info {
    line-height: 52rpx;
    color: #fff;
    font-size: 28rpx;
    padding-top: 5px;
}

.gym-list .li .info .a {
    color: #fff;
    padding-right: 15px;
}

.gym-list .li .info .a .img {
    width: 24px;
    height: 24px;
    border: 2px solid rgba(255,255,255,0.2);
    margin-right: 5px;
    border-radius: 50%;
}