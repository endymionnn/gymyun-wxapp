.coach-main {
    padding-top: 0px;
    background-color: #fafafa;
}

.coach-list {
    background: #fff;
    padding: 15px;
    margin: 10px 0;
}

.coach-list .a {
    display: block;
    border-bottom: 1px solid #EAEBEC;
}

.coach-per {
    padding-bottom: 12px;
}

.coach-per .pic {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    box-shadow: 0 0 1px 2px rgba(0,0,0,0.05);
    overflow: hidden;
}

.coach-per .pic .img {
    width: 100%;
    height: 100%;
}

.coach-per .info {
    margin-left: 50px;
    line-height: 40rpx;
}

.coach-per .info .h5 {
    font-size: 28rpx;
    font-weight: 700;
    color: #212121;
}

.coach-per .info .p {
    color: #939393;
    font-size: 24rpx;
}

.coach-item {
    padding-top: 15px;
}

.coach-item .a {
    display: block;
    border-bottom: 0px;
}

.coach-item .pic {
    width: 108px;
    height: 72px;
    border-radius: 6px;
    overflow: hidden;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.coach-item .info {
    margin-left: 118px;
    height: 72px;
    line-height: 48rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.coach-item .info .h6 {
    font-size: rpx;
    color: #000;
}

.coach-item .info .desc {
    font-size: 26rpx;
    color: #999;
}

.coach-item .info .p .span {
    color: #F0AD4E;
    font-size: 24rpx;
    letter-spacing: 2rpx;
}

.coach-item .info .p .cite {
    font-size: 28rpx;
}

.coach-item .info .p .em {
    height: 24px;
    line-height: 50rpx;
    background: #0096ff;
    color: #fff;
    border-radius: 4px;
    padding: 0 10px;
    font-size: 24rpx;
}