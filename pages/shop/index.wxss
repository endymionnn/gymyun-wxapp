.fllow-list {
    padding: 10px 15px 20px;
}

.fllow-list .fllow-li {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 15px 0;
    background: #ffffff;
}

.fllow-list .fllow-li:last-child:before {
    display: none;
}

.fllow-list .fllow-li:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 1px;
    background: #EAEBEC;
    left: 0;
    bottom: 0;
}

.fllow-list .fllow-li .z {
