.coach-main {
    padding-top: 0px;
}

.coach-list {
    background: #fff;
    padding: 0px 15px 15px;
    margin-bottom: 10px;
}

.coach-list .a {
    display: block;
    border-bottom: 1px solid #EAEBEC;
}

.coach-per {
    padding-bottom: 12px;
}

.coach-per .pic {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    box-shadow: 0 0 1px 2px rgba(0,0,0,0.05);
    overflow: hidden;
}

.coach-per .pic .img {
    width: 100%;
    height: 100%;
}

.coach-per .info {
    margin-left: 50px;
    line-height: 40rpx;
}

.coach-per .info .h5 {
    font-size: 28rpx;
    font-weight: 700;
    color: #212121;
}

.coach-per .info .p {
    color: #939393;
    font-size: 24rpx;
}