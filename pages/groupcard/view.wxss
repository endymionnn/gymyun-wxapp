page{
    background-color: #fafafa;
}
.coach-view{
    width: 100%;
    overflow: hidden;
}
.coach-view .view-top {
    position: relative;
    height: 160px;
    box-sizing: border-box;
    background-position: center;
    background-size: cover;
}

.coach-view .view-top .a {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 120px;
    background: rgba(0,0,0,0.5);
    font-size: 36rpx;
    line-height: 52rpx;
    color: #fff;
    font-weight: 700;
}

.coach-view .view-box {
    margin: 0 15px;
    position: relative;
    top: -40px;
    border-radius: 6px;
    background: #fff;
    overflow: hidden;
    box-shadow: 0 0 2px 1px rgba(0,0,0, 0.05);
}

.coach-view .group_coach {
    width: 100%;
    height: 80px;
    position: relative;
}

.coach-view .group_coach .img {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 60px;
    height: 60px;
    border-radius: 30px;
}

.coach-view .group_content {
    margin-left: 80px;
}

.coach-view .group_content .name {
    height: 30px;
    line-height: 80rpx;
    font-size: 36rpx;
    overflow: hidden;
    color: #000;
}

.coach-view .group_content .desc {
    height: 40px;
    line-height: 40rpx;
    font-size: 24rpx;
    overflow: hidden;
    color: #666;
    padding-right: 20px;
}

.coach-view .weui-form-preview__btn_primary {
    color: #fff;
    background: #0096ff;
}
.orig{
    font-size: 24rpx;
    color: #999;
    margin-left: 10rpx;
    text-decoration:line-through;
    font-style:italic;
}
.c_price {
    font-size: 44rpx;
    color: #F0AD4E;
}

.c_price text {
    font-size: 28rpx;
}

.weui-form-preview__value .img{
    width: 30px;
    height: 30px;
    border-radius: 50%;
    margin-left: 5px;
}

button {
    border: none;
    border-radius: 0px;
}
button::after{
    border: none;
}

.weui-btn-area {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: #f1f1f1;
    margin: 0px;
    height: 46px;
    overflow: hidden;
}

.weui-cells:after,.weui-cells:before{
    display: none;
}
.weui-form-preview:after,.weui-form-preview:before {
    display: none;
}

.weui-btn-area .weui-agree__text{
    margin-top: 7px;
}
.weui-btn-area .btn-info{
    color: #fff;
    height: 46px;
    width: 66px;
    line-height: 46px;
    margin: 0px;
    padding: 0px;
    border-radius: 0px;
    border: 0px;
    background: #10aeff;
}
.weui-btn-area .btn-info .icontubiao- {
    font-size: 52rpx;
}
.weui-btn-area .btn-primary{
    color: #fff;
    height: 46px;
    width: 90px;
    margin: 0px;
    padding: 0px;
    border: 0px;
    border-radius: 0px;
    background: #ff5000;
}
.weui-agree__link{
    line-height: 32px;
    font-size: 13px;
}
.share_qrcode{
    position: fixed;
    right: -25px;
    bottom: 120px;
    z-index: 99;
    height: 40px;
    width: 70px;
    border-radius: 20px;
    background-color: #F0AD4E;
}
.share_qrcode text{
    font-size: 26px;
    margin-left: 10px;
    color: #fff;
}
.share_qrcode_img{
    z-index: 999;
    background: rgba(0, 0, 0, 0.8);
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
}
.share_qrcode_img .qrcode_img{
    width: 100%;
    height: 100vh;
}
.share_qrcode_img .save_qrcode{
    z-index: 9999;
    position: fixed;
    bottom: 10px;
    width: 200px;
    height: 48px;
    line-height: 48px;
    left: 50%;
    margin-left: -100px;
    background: #FF7F00;
    color: #fff;
    text-align: center;
    border-radius: 24px;
}
