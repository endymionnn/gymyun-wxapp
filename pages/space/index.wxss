.coach-main {
    padding-top: 0px;
}

.coach-list {
    background: #fff;
    padding: 0px 15px 15px;
    margin-bottom: 10px;
}

.coach-list .a {
    display: block;
    border-bottom: 1px solid #EAEBEC;
}

.coach-item {
    padding-top: 15px;
}

.coach-item .a {
    display: block;
    border-bottom: 0px;
}

.coach-item .pic {
    width: 108px;
    height: 72px;
    border-radius: 6px;
    overflow: hidden;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.coach-item .info {
    margin-left: 118px;
    height: 72px;
    line-height: 48rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
}
.coach-item .info .status {
    color: #fff;
    font-size: 24rpx;
    padding: 3px 6px;
    border-radius: 4px;
    margin-right: 5px;
}
.coach-item .info .h6 {
    font-size: rpx;
    color: #000;
}

.coach-item .info .desc {
    font-size: 26rpx;
    color: #999;
}

.coach-item .info .p .span {
    color: #F0AD4E;
    font-size: 24rpx;
    letter-spacing: 2rpx;
}
.coach-item .info .p text {
    margin-right: 10px;
}
