.body{
    background-color: #fff;
}
.body .box{
    margin: 20px 40px;
    background: #222;
    min-height: 20px;
    border-radius: 10px;
    overflow: hidden;
}
.headimg {
    width: 66px;
    height: 66px;
    display: block;
    border-radius: 50%;
    overflow: hidden;
    margin: 50px auto 20px;
    box-shadow: 0 0 10px #fff;
    border: 1px solid #fff;
}
.headimg view{
    width: 60px;
    height: 60px;
    display: block;
    border-radius: 50%;
    overflow: hidden;
    margin-top: 3px;
    margin-left: 3px;
}
.iccard {
    color: #fff;
    font-size: 32rpx;
    text-align: center;
}
.card-line{
    position: relative;
    height: 20px;
    margin-top: 20px;
}
.card-line .left{
    position: absolute;
    width: 20px;
    height: 20px;
    left: -10px;
    border-radius: 50%;
    background-color: #fff;
}
.card-line .line{
    position: absolute;
    height: 10px;
    left: 0;
    right: 0;
    border-bottom: 1px dashed #fff;
}
.card-line .right{
    position: absolute;
    width: 20px;
    height: 20px;
    right: -10px;
    border-radius: 50%;
    background-color: #fff;
}
.qrcode{
    width: 180px;
    height: 180px;
    margin: 20px auto;
}
.qrcode .img{
    width: 180px;
    height: 180px;
}
.qr_iccard{
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    margin-bottom: 10px;
}
.qr_iccard_ps{
    color: #fff;
    font-size: 20rpx;
    text-align: center;
    margin-bottom: 20px;
}